<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">
    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.activity.FeedFragment"
        android:label="fragment_feed_new"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
        <action
            android:id="@+id/action_feedFragment_to_fragmentOpenPost"
            app:destination="@id/fragmentOpenPost" />
        <action
            android:id="@+id/action_feedFragment_to_fragmentImage"
            app:destination="@id/fragmentImage" />
        <action
            android:id="@+id/action_feedFragment_to_fragmentSignIn"
            app:destination="@id/fragmentSignIn" />
        <action
            android:id="@+id/action_feedFragment_to_fragmentSignUp"
            app:destination="@id/fragmentSignUp" />
    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nmedia.activity.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />
    <fragment
        android:id="@+id/fragmentOpenPost"
        android:name="ru.netology.nmedia.activity.FragmentOpenPost"
        android:label="FragmentOpenPost"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_fragmentOpenPost_to_newPostFragment"
            app:destination="@id/newPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/fragmentImage"
        android:name="ru.netology.nmedia.activity.FragmentImage"
        android:label="FragmentImage"
        tools:layout="@layout/fragment_photo">
    </fragment>
    <fragment
        android:id="@+id/fragmentSignIn"
        android:name="ru.netology.nmedia.activity.FragmentSignIn"
        android:label="FragmentSignIn" />
    <fragment
        android:id="@+id/fragmentSignUp"
        android:name="ru.netology.nmedia.activity.FragmentSignUp"
        android:label="FragmentSignUp" />


</navigation>